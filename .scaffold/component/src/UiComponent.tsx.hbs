import { ReactNode } from 'react';

import { clsx } from 'clsx/lite';

{{#if (eq styles "css")}}
import styles from './{{componentName}}.module.css';
{{else if (eq styles "postcss")}}
import styles from './{{componentName}}.module.pcss';
{{else if (eq styles "scss")}}
import styles from './{{componentName}}.module.scss';
{{else}}
import * as styles from './{{componentName}}.css';
{{/if}}

export type Props = {
  className?: string;
};

export function {{componentName}}({ className = '' }: Props): ReactNode {
  return <div className={clsx(styles.root, className)} />;
}

if (import.meta.env.DEV) {
  {{componentName}}.displayName = '{{packageName}}({{componentName}})';
}
