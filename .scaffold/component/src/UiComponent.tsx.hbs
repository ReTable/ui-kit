import { ReactElement } from 'react';

{{#if (eq styles "css")}}
import styles from './{{componentName}}.module.css';
{{else if (eq styles "postcss")}}
import styles from './{{componentName}}.module.pcss';
{{else if (eq styles "scss")}}
import styles from './{{componentName}}.module.scss';
{{else}}
import { root } from './{{componentName}}.css';
{{/if}}

export type Props = {
  className?: string;
};

export function {{componentName}}({ className = '' }: Props): ReactElement {
{{#if (eq styles "vanillaExtract")}}
  return <div className={`${root} ${className}`} />;
{{else}}
  return <div className={`${styles.root} ${className}`} />;
{{/if}}
}
