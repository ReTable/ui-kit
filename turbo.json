{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.forge.json"],
      "outputs": ["lib/**", "typings/**"]
    },
    "lint": {
      "inputs": ["src/**", "stories/**", "tests/**", ".eslintignore", ".eslintrc.json"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**"]
    }
  }
}
